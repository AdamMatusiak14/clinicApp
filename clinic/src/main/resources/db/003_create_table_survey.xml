<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">


    <changeSet id="0003" author="ad">
        <createTable tableName="survey">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="age" type="INT" />
            <column name="sex" type="VARCHAR(100)" />
            <column name="takingMedication" type="VARCHAR(200)" />
            <column name="past_illnesses" type="VARCHAR(100)" />
            <column name="chronic_diseases" type="VARCHAR(100)" />
            <column name="vaccinations" type="VARCHAR(100)" />
            <column name="allergies" type="VARCHAR(100)" />
            <column name="family_history" type="VARCHAR(100)" />
            <column name="smoking" type="VARCHAR(100)" />
            <column name="alcohol" type="VARCHAR(100)" />
         
        </createTable>

    </changeSet>
</databaseChangeLog>